@model DetailsViewModel

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6 mb-3">
            <h1 class="text-center mb-3">@App.Resources.Details.Document.Edit @App.Resources.Details.EmployeeMentee.Mentor</h1>
            <div class="card">
                <div class="card-body">
                    <section>
                       <form id="mentorForm" method="post" asp-controller="Details" asp-action="Mentor">
                           <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                           <div class="form-floating">
                               <input asp-for="MentorFirstName" class="form-control" id="firstName" type="text" value="@Model.MentorFirstName"
                                      aria-label="@App.Resources.Details.EmployeeMentee.Mentor @App.Resources.Add.Mentee.FirstName" disabled>
                               <label for="firstName">@App.Resources.Details.EmployeeMentee.Mentor @App.Resources.Add.Mentee.FirstName</label>
                           </div>
                           <div class="form-floating">
                               <input asp-for="MentorLastName" class="form-control" type="text" value="@Model.MentorLastName" id="lastName"
                                      aria-label="@App.Resources.Details.EmployeeMentee.Mentor @App.Resources.Add.Mentee.LastName" disabled>
                               <input asp-for="InitialMentorId" type="hidden" value="@Model.InitialMentorId" />
                               <label for="lastName">@App.Resources.Details.EmployeeMentee.Mentor @App.Resources.Add.Mentee.LastName</label>
                           </div>
                           <div class="form-group text-center mb-0">
                               <div class="d-flex justify-content-center">
                                   <div class="btn-group" role="group">
                                       <button type="button" class="btn btn-primary px-4 py-2 rounded-3 edit-btn">@App.Resources.Details.Document.Edit</button>
                                   </div>
                                   <div class="input-group-text" style="opacity: 0;">&nbsp;</div>
                                   <div class="btn-group" role="group">
                                       <button type="submit" class="btn btn-primary px-4 py-2 rounded-3 save-btn" disabled>@App.Resources.Details.Document.Save</button>
                                   </div>
                               </div>
                           </div>
                       </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const editBtn = document.querySelector('.edit-btn');
        const saveBtn = document.querySelector('.save-btn');
        const firstNameInput = document.querySelector('input[name="MentorFirstName"]');
        const lastNameInput = document.querySelector('input[name="MentorLastName"]');

        function toggleInputDisabled() {
            firstNameInput.disabled = !firstNameInput.disabled;
            lastNameInput.disabled = !lastNameInput.disabled;
        }

        editBtn.addEventListener('click', function() {
            toggleInputDisabled();
            saveBtn.disabled = !saveBtn.disabled;
        });
    });
</script>
<style>
    .container {
        margin-top: 50px;
    }
    .card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }
    .card-body {
        padding: 2rem;
    }
    .form-floating {
        margin-bottom: 1rem;
    }
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }
    .table td, .table th {
        border-bottom: none !important;
    }
</style>

