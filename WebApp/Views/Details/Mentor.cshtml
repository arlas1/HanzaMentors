@model DetailsViewModel

<div class="row justify-content-center">
    <div class="col-md-4">
        <section>
            <form id="mentorForm" method="post" asp-controller="Details" asp-action="Mentor">
                <h1 class="text-center">Mentor details</h1>
                <hr/>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="MentorFirstName" class="form-control" type="text" value="@Model.MentorFirstName" aria-label="Mentor first name" disabled>
                <hr/>
                <input asp-for="MentorLastName" class="form-control" type="text" value="@Model.MentorLastName" aria-label="Mentor last name" disabled>
                <input asp-for="InitialMentorId" type="hidden" value="@Model.InitialMentorId" />
                <hr/>
                <div class="form-group text-center mb-3">
                    <div class="d-flex justify-content-center">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-primary px-4 py-2 rounded-3 edit-btn">Edit</button>
                        </div>
                        <div class="input-group-text" style="opacity: 0;">&nbsp;</div>
                        <div class="btn-group" role="group">
                            <button type="submit" class="btn btn-primary px-4 py-2 rounded-3 save-btn" disabled>Save</button>
                        </div>
                        <div class="input-group-text" style="opacity: 0;">&nbsp;</div>
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-primary px-4 py-2 rounded-3"
                                    data-bs-toggle="modal" data-bs-target="#staticBackdrop">Assign Document</button>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>


<script>
    document.addEventListener("DOMContentLoaded", function() {
        const editBtn = document.querySelector('.edit-btn');
        const saveBtn = document.querySelector('.save-btn');
        const firstNameInput = document.querySelector('input[name="MentorFirstName"]');
        const lastNameInput = document.querySelector('input[name="MentorLastName"]');

        function toggleInputDisabled() {
            firstNameInput.disabled = !firstNameInput.disabled;
            lastNameInput.disabled = !lastNameInput.disabled;
        }

        editBtn.addEventListener('click', function() {
            toggleInputDisabled();
            saveBtn.disabled = !saveBtn.disabled;
        });
    });
</script>
