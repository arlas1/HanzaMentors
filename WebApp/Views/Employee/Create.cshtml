@model EmployeeCreateEditViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Employee</h4>
@if (Model.AppUserSelectList == null)
{
    <h4>null</h4>
}
else
{
    <ul>
        @foreach (var item in Model.AppUserSelectList)
        {
            <li>@item.Text - @item.Value</li>
        }
    </ul>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee.AppUserId" class="control-label"></label>
                <select asp-for="Employee.AppUserId" class ="form-control" asp-items="Model.AppUserSelectList"></select>
            </div>
            <div class="form-group">
                <label asp-for="Employee.EmployeeType" class="control-label"></label>
                <input asp-for="Employee.EmployeeType" class="form-control" />
                <span asp-validation-for="Employee.EmployeeType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Profession" class="control-label"></label>
                <input asp-for="Employee.Profession" class="form-control" />
                <span asp-validation-for="Employee.Profession" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
