<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - HANZA Mentors</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HANZA Mentors</a>
            @* <a class="navbar-brand" id="generate" href="#">HANZA Mentors</a> *@
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @App.Resources.View.Shared._Layout.Mentee
                            </a>
                            <ul class="dropdown-menu custom-dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Mentee" asp-action="EmployeeMentee">@App.Resources.View.Shared._Layout.Mentee_Employees</a></li>
                                <li><a class="dropdown-item" asp-controller="Mentee" asp-action="InternMentee">@App.Resources.View.Shared._Layout.Mentee_Interns</a></li>
                            </ul>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Mentor" asp-action="Index">@App.Resources.View.Shared._Layout.Mentors</a>
                        </li>
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @App.Resources.View.Shared._Layout.Documents
                            </a>
                            <ul class="dropdown-menu custom-dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Document" asp-action="DocumentSamples">@App.Resources.View.Shared._Layout.Document_Samples</a></li>
                                <li><a class="dropdown-item" asp-controller="Document" asp-action="MenteeInternsDocuments">@App.Resources.View.Shared._Layout.Mentee_Interns @App.Resources.View.Shared._Layout.Documents</a></li>
                                <li><a class="dropdown-item" asp-controller="Document" asp-action="MenteeEmployeeDocuments">@App.Resources.View.Shared._Layout.Mentee_Employees @App.Resources.View.Shared._Layout.Documents</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="btn btn-secondary dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @App.Resources.View.Shared._Layout.Add
                            </a>

                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Add" asp-action="Mentor">@App.Resources.View.Shared._Layout.AddMentor</a></li>
                                <li><a class="dropdown-item" asp-controller="Add" asp-action="Mentee">@App.Resources.View.Shared._Layout.AddMentee</a></li>
                                <li><a class="dropdown-item" asp-controller="Add" asp-action="Supervisor">@App.Resources.View.Shared._Layout.AddSupervisor</a></li>
                                <li><a class="dropdown-item" asp-controller="Add" asp-action="DocumentSample">@App.Resources.View.Shared._Layout.AddDocumentSample</a></li>
                            </ul>
                        </li>
                    } 
                    else if (User.IsInRole("Mentee"))
                    {
                        
                    }
                    else if (User.IsInRole("Mentor"))
                    {
                        
                    }
                    else if (!User.Identity!.IsAuthenticated)
                    {
                        
                    }
                    @* <partial name="_LanguageSelectionPartial"/> *@
                </ul>
                <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="footer text-muted">
    <div class="container">
        &copy; 2024 - HANZA Mentors | @Thread.CurrentThread.CurrentCulture.Name
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
