@model MentorsViewModel

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-8 mb-3">
            <form method="get" asp-controller="Mentor" asp-action="Index">
                <div class="input-group">
                    <select asp-for="FilterType" class="custom-select border border-1 rounded-start-3 border-primary-subtle" style="background-color: white;">
                        <option value=""></option>
                        <option value="Name">Name</option>
                        <option value="Profession">Profession</option>
                    </select>
                    <input asp-for="FilterRequest" class="form-control border-primary-subtle" placeholder="Search">
                    <button class="btn btn-primary rounded-end-3" type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                        </svg>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="row justify-content-center column-gap-5">
        <div class="col-lg-10 mb-4">
            <h2 class="text-center mb-3">Mentors</h2>
            <div class="card border rounded-3">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <colgroup>
                                <col style="width: 30%;">
                                <col style="width: 30%;">
                                <col style="width: 30%;">
                                <col style="width: 10%;">
                            </colgroup>
                            <thead>
                                <tr>
                                    <th>Full Name</th>
                                    <th>Profession</th>
                                    <th>Currently Mentors</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var mentor in Model.Mentors)
                                {
                                    <tr>
                                        <td>@mentor.FirstName @mentor.LastName</td>
                                        <td>@mentor.Profession</td>
                                        <td>
                                            @foreach (var mentorMentee in Model.MentorMentees)
                                            {
                                                @if (mentorMentee.Key.Count >= 2 && mentor.Id.Equals(mentorMentee.Key[0]))
                                                {
                                                    <span>@mentorMentee.Value</span><br/>
                                                }
                                            }
                                        </td>
                                        <td>
                                            <a asp-controller="Details" asp-action="Mentor" asp-route-mentorId="@mentor.Id" class="btn btn-primary">Edit</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 50px;
    }
    .card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }
    .card-body {
        padding: 0;
    }
    .table th,
    .table td {
        border: none;
    }
    .table th {
        background-color: #f8f9fa;
    }
    .table tr {
        border-bottom: 1px solid #acacac;
    }
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }
</style>
