@model AddSupervisorViewModel

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6 mb-3">
            <h1 class="text-center mb-3">@App.Resources.Add.Supervisor.AddSupervisor</h1>
            <div class="card">
                <div class="card-body">
                    <section>
                        <form id="supervisorForm" method="post" asp-controller="Add" asp-action="AddSupervisor">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row justify-content-center">
                                <div class="col-md-10">
                                    <div class="form-floating mb-3">
                                        <input asp-for="FullName" id="fullName" class="form-control border-dark-subtle"/>
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                        <label for="fullName">@App.Resources.Add.Supervisor.FullName</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <select asp-for="SupervisorType" id="supervisorTypeSelect" class="form-select border border-dark-subtle">
                                            <option selected="selected"></option>
                                            <option value="Factory">@App.Resources.Add.Supervisor.FactorySupervisor</option>
                                            <option value="Vocational school">@App.Resources.Add.Supervisor.VolSclSupervisor</option>
                                        </select>
                                        <label for="supervisorTypeSelect">@App.Resources.Add.Supervisor.SupervisorType</label>
                                        <span asp-validation-for="SupervisorType" class="text-danger"></span>
                                    </div>
                                    <input asp-for="IsTest" id="IsTest" type="hidden" class="form-control border-dark-subtle"/>
                                    <div class="form-group text-center mb-0">
                                        <div class="d-flex justify-content-center">
                                            <div class="btn-group" role="group" aria-label="Add buttons">
                                                <button type="submit" class="btn btn-primary px-4 py-2 rounded-3">@App.Resources.Add.Supervisor.AddSupervisor</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 50px;
    }
    .card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }
    .card-body {
        padding: 2rem;
    }
    .form-floating {
        margin-bottom: 1rem;
    }
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }
    .form-group.mb-1 {
        margin-bottom: 0.5rem !important;
    }
</style>

