@model AddDocumentSampleViewModel

<div class="row justify-content-center">
    <div class="col-md-4">
        <section>
            <form id="documentSampleForm" method="post" enctype="multipart/form-data">
                <h1 class="text-center">Add Document Sample</h1>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
                <div class="form-group">
                    <input asp-for="Title" class="form-control border-dark-subtle" placeholder="Sample document title" aria-label="Sample document title"/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <br>
                <div class="input-group mb-3">
                    <input asp-for="File" type="file" class="form-control">
                    <span asp-validation-for="File" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group text-center mb-3">
                    <div class="d-flex justify-content-center">
                        <div class="btn-group" role="group" aria-label="Add buttons">
                            <button type="button" class="btn btn-primary px-4 py-2 rounded-3"
                                    data-bs-toggle="modal" data-bs-target="#staticBackdrop">Add sample</button>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Document sample added successfully.</p>
      </div>
      <div class="modal-footer justify-content-center">
          <button type="button" onclick="setAction('AddDocumentSample')" class="btn btn-primary px-3 py-1 rounded-3 justify-content-center" >Ok</button>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    function setAction(actionName) {
        const form = document.getElementById('documentSampleForm');
        form.action = actionName;
        form.submit();
    }
</script>
