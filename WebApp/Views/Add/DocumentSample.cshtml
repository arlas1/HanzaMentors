@model AddDocumentSampleViewModel

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6 mb-3">
            <h1 class="text-center mb-3">Add Document Sample</h1>
            <div class="card">
                <div class="card-body">
                    <section>
                        <form id="documentSampleForm" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row justify-content-center">
                                <div class="col-md-10">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Title" id="sampleTitle" class="form-control border-dark-subtle"/>
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                        <label for="sampleTitle">Sample document title</label>
                                    </div>
                                    
                                    <div class="input-group mb-3">
                                        <input asp-for="File" type="file" class="form-control">
                                        <span asp-validation-for="File" class="text-danger"></span>
                                    </div>
                                </div>   
                            </div>
                            <div class="form-group text-center mb-0">
                                <div class="d-flex justify-content-center">
                                    <div class="btn-group" role="group" aria-label="Add buttons">
                                        <button type="button" class="btn btn-primary px-4 py-2 rounded-3"
                                                data-bs-toggle="modal" data-bs-target="#staticBackdrop">Add sample</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Document sample added successfully.</p>
      </div>
      <div class="modal-footer justify-content-center">
          <button type="button" onclick="setAction('AddDocumentSample')" class="btn btn-primary px-3 py-1 rounded-3 justify-content-center" >Ok</button>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    function setAction(actionName) {
        const form = document.getElementById('documentSampleForm');
        form.action = actionName;
        form.submit();
    }
</script>

<style>
    .container {
        margin-top: 50px;
    }
    .card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }
    .card-body {
        padding: 2rem;
    }
    .form-floating {
        margin-bottom: 1rem;
    }
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }
    .form-group.mb-1 {
        margin-bottom: 0.5rem !important;
    }
</style>

