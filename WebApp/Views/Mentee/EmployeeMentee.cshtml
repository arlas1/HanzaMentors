@model MenteeViewModel

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-8 mb-3">
            <form method="get" asp-controller="Mentee" asp-action="EmployeeMentee">
                <div class="input-group">
                    <select asp-for="FilterType" class="custom-select border border-1 rounded-start-3 border-primary-subtle" style="background-color: white;">
                        <option value=""></option>
                        <option value="Mentee's name">Mentee's name</option>
                        <option value="Profession">Profession</option>
                        <option value="Mentee's type">Mentee's type</option>
                    </select>
                    <input asp-for="FilterRequest" class="form-control border-primary-subtle" placeholder="Search">
                    <button class="btn btn-primary rounded-end-3" type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                        </svg>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="row justify-content-center column-gap-5">
        <div class="col-lg-12 mb-4">
            <h2 class="text-center mb-3">Employee Mentees</h2>
            <div class="card border rounded-3">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <colgroup>
                                <col style="width: 15%;">
                                <col style="width: 8.5%;">
                                <col style="width: 8.5%;">
                                <col style="width: 25%;">
                                <col style="width: 20%;">
                                <col style="width: 23%;">
                            </colgroup>
                            <thead>
                                <tr>
                                    <th>Full name</th>
                                    <th>Profession</th>
                                    <th>Type</th>
                                    <th>Mentorship until/from/total hours</th>
                                    <th>Mentee's mentor</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var mentee in @Model.EmployeeMentees)
                                {
                                    <tr>
                                        <td>@mentee.FirstName @mentee.LastName</td>
                                        <td>@mentee.Profession</td>
                                        <td>@mentee.EmployeeType</td>
                                        <td>
                                            @foreach (var employeeMentorship in Model.EmployeeMentorships)
                                            {
                                                if (employeeMentorship.EmployeeId.Equals(mentee.Id))
                                                {
                                                    <div>@employeeMentorship.FromDate - @employeeMentorship.UntilDate / @employeeMentorship.TotalHours hours</div>
                                                }
                                            }
                                        </td>
                                        <td>
                                            @foreach (var mentors in Model.MenteesMentor)
                                            {
                                                if (mentee.Id.Equals(mentors.Key))
                                                {
                                                    foreach (var mentorId in mentors.Value)
                                                    {
                                                        foreach (var mentor in Model.Mentors)
                                                        {
                                                            if (mentor.Id.Equals(mentorId))
                                                            {
                                                                if (mentors.Value.Count == 1 || mentorId.Equals(mentors.Value.Last()))
                                                                {
                                                                    <div>@mentor.FirstName @mentor.LastName (currently active)</div>
                                                                }
                                                                else
                                                                {
                                                                    <div>@mentor.FirstName @mentor.LastName</div>
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        </td>
                                        <td>
                                            <a asp-controller="Details" asp-action="EmployeeMentee" asp-route-employeeId="@mentee.Id" class="btn btn-primary">Edit</a>
                                            <a asp-controller="Add" asp-action="DocumentEmployee" asp-route-menteeId="@mentee.Id" class="btn btn-primary">Generate Document</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 50px;
    }
    .card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }
    .card-body {
        padding: 0;
    }
    .table th,
    .table td {
        border: none;
    }
    .table th {
        background-color: #f8f9fa;
    }
    .table tr {
        border-bottom: 1px solid #acacac;
    }
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }
</style>
