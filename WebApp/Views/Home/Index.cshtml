@using Microsoft.IdentityModel.Tokens
@model HomeViewModel

@if (User.IsInRole("Admin"))
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card text-center">
                    <div class="card-header bg-white">
                        <h5 class="card-title">General Information</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Total Mentors: <span class="text-primary">@Model.TotalMentorsAmount</span></p>
                        <p class="card-text">Active Mentorships: <span class="text-success">@Model.ActiveMentorshipsAmount</span></p>
                        @* <p class="card-text">Mentees on Sick Leave: <span class="text-warning">@Model.MenteesOnSickLeaveAmount</span></p> *@
                        <p class="card-text">Total Factory Supervisors: <span class="text-danger">@Model.FactorySupervisorsAmount</span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
else if (User.IsInRole("Mentee"))
{
    
}
else if (User.IsInRole("Mentor"))
{
    <div class="row justify-content-center column-gap-5">
        <div class="col-lg-12 mb-4">
            <h2 class="text-center mb-3">Your current mentees</h2>
            <div class="card border rounded-3">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <colgroup>
                                <col style="width: 25%;">
                                <col style="width: 25%;">
                                <col style="width: 25%;">
                                <col style="width: 25%;">
                            </colgroup>
                            <thead>
                            <tr>
                                <th>Mentee Full name</th>
                                <th>Mentee type</th>
                                <th>Mentorship until/from</th>
                                <th>Mentor for total hours</th>
                            </tr>
                            </thead>
                            <tbody>
                            @if (Model.MentorData.IsNullOrEmpty())
                            {
                                <tr>
                                    <td>no data</td>
                                    <td>no data</td>
                                    <td>no data</td>
                                    <td>no data</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var mentor in Model.MentorData!)
                                {
                                    <tr>
                                        <td>@mentor.MenteeFullName</td>
                                        <td>@mentor.MenteeType</td>
                                        <td>@mentor.MentorFromDate - @mentor.MentorUntilDate</td>
                                        <td>@mentor.MentorTotalHours</td>
                                    </tr>
                                }
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else if(!User.Identity!.IsAuthenticated)
{
    <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="card text-center">
                        <div class="card-header bg-white">
                            <h5 class="card-title">Welcome to Our Platform</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">Please log in to access your dashboard.</p>
                            @* <a href="~/Account/Login" class="btn btn-primary">Login</a> *@
                        </div>
                    </div>
                </div>
            </div>
        </div>
}


