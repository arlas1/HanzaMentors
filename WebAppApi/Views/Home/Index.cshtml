<script>
    document.addEventListener("DOMContentLoaded", function() {
        fetch('/api/v1/Home/Index', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        })
        .then(response => {
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            return response.json();
        })
        .then(data => {
            console.log('Fetched data:', data);
    
            document.getElementById('totalMentors').textContent = data.totalMentorsAmount;
            console.log('Total Mentors Amount:', data.totalMentorsAmount);
    
            document.getElementById('activeMentorships').textContent = data.activeMentorshipsAmount;
            console.log('Active Mentorships Amount:', data.activeMentorshipsAmount);
    
            document.getElementById('totalFactorySupervisors').textContent = data.factorySupervisorsAmount;
            console.log('Factory Supervisors Amount:', data.factorySupervisorsAmount);
        })
        .catch(error => {
            console.error('There was a problem with the fetch operation:', error);
        });
    });

</script>